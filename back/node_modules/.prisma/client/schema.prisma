generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tarea {
  id           Int    @id @default(autoincrement())
  nombre       String
  descripcion  String
  inicio_tarea String
  fin_tarea    String
  estado       String @default("Pendiente")
  // objetivo     Objetivo @relation(fields: [id_objetivo], references: [id])
  id_objetivo  Int
}

